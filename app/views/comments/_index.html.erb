<p id="notice"><%= notice %></p>

<h5>Comments</h5>

<table>

  <tbody>
    <% comments.each do |comment| %>
      <tr>
        <td>* <%= comment.content %></td>
        <td><%= link_to 'Show', gossip_comment_path(comment.gossip_id, comment.id) %></td>
        <td><%= link_to 'Edit', edit_gossip_comment_path(comment.gossip_id, comment.id) %></td>
        <td><%= link_to 'Destroy', gossip_comment_path(comment.gossip_id, comment.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
